<style>

  {% for block in section.blocks %}

    .custom .color-swatch--{{ block.settings.title | handleize }}{

      {% if block.settings.image != blank or block.settings.title == blank %}
      background:url({{ block.settings.image }});
      {% else %}
      background:{{ block.settings.color_code }};
      {% endif %}
    
    }
    
  {% endfor %}
  
</style>


{% schema %}
{
  "name": "Color",
  "settings": [
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "paragraph",
      "content": "Add Color Settings here"
    }
  ],
  "blocks": [
    {
      "type": "colorSettings",
      "name": "Color Settings",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Color Name"
        },
        {
          "type": "color_background",
          "id": "color_code",
          "label": "Color Code",
          "default": "#000000"
        },
        {
          "type": "paragraph",
          "content": "For a smoother experience, consider either including a color swatch or adding an image of the swatch."
        },
        {
          "type": "image_picker",
             "id": "image",
          "label": "Swatch image"
        }
      ]
    }
  ]
}
{% endschema %}